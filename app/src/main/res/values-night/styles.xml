<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
	</style>

	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/divider_height</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>

	<style name="FolderText" parent="TextAppearance.AppCompat.Body2">
	</style>

	<style name="FileText" parent="TextAppearance.AppCompat.Body2">
	</style>

	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ActionBarClose" parent="AppTheme">
		<item name="android:homeAsUpIndicator">@drawable/ic_action_close</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

	<style name="SelectButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>

	<style name="CancelButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>

	<style name="FabLabels">
		<item name="android:background">@drawable/fab_label_background</item>
		<item name="android:textColor">@color/colorIcons</item>
	</style>

	<style name="FabMain">
		<item name="fab_addButtonColorNormal">@color/colorAccent</item>
		<item name="fab_addButtonColorPressed">@color/colorAccentPressed</item>
		<item name="fab_addButtonPlusIconColor">@color/colorIcons</item>
		<item name="fab_colorNormal">@color/colorAccent</item>
		<item name="fab_colorPressed">@color/colorAccentPressed</item>
	</style>
</resources>
