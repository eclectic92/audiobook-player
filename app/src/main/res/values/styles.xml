<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:listDivider">@color/colorDivider</item>
		<item name="colorControlNormal">@color/colorControlNormal</item>
		<item name="android:windowBackground">@color/colorWindowBackground</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
	</style>

	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/divider_height</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>

	<style name="FolderText" parent="TextAppearance.AppCompat.Body2">
	</style>

	<style name="FileText" parent="TextAppearance.AppCompat.Body2">
	</style>

	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.NoActionBar.Close" parent="AppTheme.NoActionBar">
		<item name="android:homeAsUpIndicator">@drawable/ic_close_black_24dp</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="SelectButton" parent="Widget.AppCompat.Button.Borderless">
	</style>

	<style name="CancelButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/colorCancelButton</item>
	</style>

	<style name="FileBrowserTabLayout" parent="Widget.Design.TabLayout">
		<item name="tabGravity">fill</item>
		<item name="tabMaxWidth">0dp</item>
	</style>

	<style name="FabLabels">
		<item name="android:background">@drawable/fab_label_background</item>
		<item name="android:textColor">@color/colorIcons</item>
	</style>

	<style name="FabMain">
		<item name="fab_addButtonColorNormal">@color/colorAccent</item>
		<item name="fab_addButtonColorPressed">@color/colorAccentPressed</item>
		<item name="fab_addButtonPlusIconColor">@color/colorIcons</item>
		<item name="fab_colorNormal">@color/colorAccent</item>
		<item name="fab_colorPressed">@color/colorAccentPressed</item>
	</style>

</resources>
