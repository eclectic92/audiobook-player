<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:listDivider">@color/colorDivider</item>
		<item name="colorControlNormal">@color/colorSecondaryText</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
	</style>

	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>

	<style name="FolderText" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/colorSecondaryText</item>
	</style>

	<style name="FileText" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/colorSecondaryText</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ActionBarClose">
		<item name="android:homeAsUpIndicator">@drawable/ic_action_close</item>
	</style>
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="SelectButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/colorPrimaryDark</item>
	</style>

	<style name="CancelButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/colorCancelButton</item>
	</style>
</resources>
