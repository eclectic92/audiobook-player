<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.natalieryan.android.superaudiobookplayer.ui.folderbrowser.FolderBrowserActivity">

	<LinearLayout
		android:id="@+id/folder_list_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="0dp"
		android:orientation="vertical"
		android:visibility="visible"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<fragment
			android:id="@+id/folder_list_fragment"
			android:name="com.natalieryan.android.superaudiobookplayer.ui.folderbrowser.FolderBrowserFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:layout="@layout/fragment_folder_browser">

		</fragment>

	</LinearLayout>
</android.support.constraint.ConstraintLayout>
