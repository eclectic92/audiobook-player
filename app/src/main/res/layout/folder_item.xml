<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	<data>
		<variable
			name="folder"
			type="java.io.File"/>
	</data>

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="@dimen/folder_icon_size"
			android:layout_height="@dimen/folder_icon_size"
			android:contentDescription="@string/description_folder_icon"
			app:srcCompat="@drawable/ic_folder_black_24dp"/>

		<TextView
			android:id="@+id/folder_name_tv"
			tools:text="Folder Name"
			style="@style/TextAppearance.AppCompat.Body2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="@dimen/folder_icon_margin_end"
			android:layout_marginBottom="0dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/imageView"
			app:layout_constraintTop_toBottomOf="@+id/imageView"
			app:layout_constraintBottom_toTopOf="@+id/imageView"/>
	</android.support.constraint.ConstraintLayout>
</layout>